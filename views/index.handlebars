<h1><i class="fas fa-hamburger"></i> Burgers <i class="fas fa-hamburger"></i></h1>

<div class="flexbox_card">
  <form class="create-form form">
    <h2>Add a Burger...</h2>
    <div class="form-group">
      <label for="ca"></label>
      <input type="text" id="ca" name="name">
      <button class="button" type="submit">Add</button>
    </div>
  </form>
</div>

<div class="best">
  <h2>Your burgers:<i class="fas fa-utensils"></i></h2>
  <ul>
    {{#each burgers}}
    <li>
      {{burger_name}}
    </li>
    {{/each}}
  </ul>
</div>
<div class="eaten">
</div>